# ============================================
# SocialSpark Environment Variables
# Copy this file to .env.local and fill in your values
# ============================================

# ---- REQUIRED FOR DEVELOPMENT ----

# Database (Neon PostgreSQL)
# Get from: https://console.neon.tech → Project → Connection Details
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/socialspark?sslmode=require"

# Auth (Better Auth)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-min-32-characters-long"
BETTER_AUTH_URL="http://localhost:3000"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ---- OPTIONAL (features disabled if not set) ----

# Google OAuth
# Get from: https://console.cloud.google.com → APIs & Services → Credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth
# Get from: https://github.com/settings/developers → OAuth Apps
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Redis (BullMQ - required for scheduling worker)
# Get from: https://console.upstash.com → Redis → Details
REDIS_URL=""

# ---- AI PROVIDERS ----

# Anthropic (Claude - primary AI provider)
# Get from: https://console.anthropic.com → API Keys
ANTHROPIC_API_KEY=""

# OpenAI (GPT - secondary AI provider)
# Get from: https://platform.openai.com → API Keys
OPENAI_API_KEY=""

# ---- FILE STORAGE (Cloudflare R2) ----
# Get from: https://dash.cloudflare.com → R2 → Manage R2 API Tokens

R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="socialspark-media"
R2_PUBLIC_URL=""

# ---- EMAIL (Resend) ----
# Get from: https://resend.com → API Keys

RESEND_API_KEY=""
EMAIL_FROM="noreply@socialspark.app"

# ---- PAYMENTS (Stripe) ----
# Get from: https://dashboard.stripe.com → Developers → API Keys

STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# ---- MONITORING ----

# Sentry
# Get from: https://sentry.io → Project → Settings → Client Keys
SENTRY_DSN=""

# Betterstack
# Get from: https://betterstack.com → Uptime → API
BETTERSTACK_API_KEY=""

# ---- SOCIAL PLATFORM OAUTH ----
# These are needed to connect user social media accounts

# X / Twitter
# Get from: https://developer.x.com → Projects & Apps
TWITTER_CLIENT_ID=""
TWITTER_CLIENT_SECRET=""

# LinkedIn
# Get from: https://www.linkedin.com/developers → My Apps
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""

# Meta (Facebook + Instagram)
# Get from: https://developers.facebook.com → My Apps
META_APP_ID=""
META_APP_SECRET=""

# TikTok
# Get from: https://developers.tiktok.com → My Apps
TIKTOK_CLIENT_KEY=""
TIKTOK_CLIENT_SECRET=""

# YouTube (uses Google OAuth)
# Same as Google OAuth or separate: https://console.cloud.google.com
YOUTUBE_CLIENT_ID=""
YOUTUBE_CLIENT_SECRET=""

# Pinterest
# Get from: https://developers.pinterest.com → My Apps
PINTEREST_APP_ID=""
PINTEREST_APP_SECRET=""

# Note: Bluesky uses app passwords (configured per-user in the app, not here)
# Note: Mastodon uses per-instance OAuth (configured per-user in the app, not here)

# ---- ENCRYPTION ----
# Used to encrypt OAuth tokens at rest in the database
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=""

# ---- ENVIRONMENT ----
NODE_ENV="development"
